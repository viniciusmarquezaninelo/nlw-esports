generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Game {
  id        String @id @default(uuid())
  title     String
  bannerUrl String

  ads Ad[]
}

model Ad {
  id             String   @id @default(uuid())
  gamesId        String
  name           String
  yearsPlaying   Int
  discord        String
  weekDays       String
  hourStart      Int
  hourEnd        Int
  useVoiceChanne Boolean
  createdAt      DateTime @default(now())

  game Game @relation(fields: [gamesId], references: [id])
}
